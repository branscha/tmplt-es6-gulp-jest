{
  "presets": ["es2015"],
  "plugins": [
    [
      "module-resolver",
      {
        "root": [
          "./src"
        ],
        "alias": {
          "underscore": "lodash"
        }
      }
    ]
  ],
  "env": {
    "test": {},
    "production": {
      "presets": ["babili"],
      "plugins": ["transform-es2015-modules-amd", "add-module-exports"]
    }
  }
}
